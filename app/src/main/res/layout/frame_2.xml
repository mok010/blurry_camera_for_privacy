<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:gravity="top">

    <!-- Top Section with Description and Before/After -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#FFCDD2">



        <LinearLayout
            android:id="@+id/beforeSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp">

            <TextView
                android:id="@+id/before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Before"
                android:textColor="#000000"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/beforeImage"
                android:layout_width="90dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/people" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/afterSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="60dp">

            <TextView
                android:id="@+id/after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="After"
                android:textColor="#000000"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/afterImage"
                android:layout_width="90dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/people" />
        </LinearLayout>

        <TextView
            android:id="@+id/afterDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:text="티 안 나게 소중한 바이오 정보만 블러링!"
            android:textColor="@color/design_default_color_error"
            android:textSize="23sp" />
    </RelativeLayout>

    <!-- Button Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="10dp">

        <Button
            android:id="@+id/button4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button_blue"
            android:text="홍채 블러링 ON"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button_grey"
            android:text="지문 블러링 OFF"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <!-- Camera and Album Buttons -->
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_deepblue"
        android:text="카메라"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_deepblue"
        android:text="앨범"
        android:textColor="@color/white"
        android:textSize="24sp" />
</LinearLayout>
