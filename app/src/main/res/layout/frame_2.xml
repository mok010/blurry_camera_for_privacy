<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top">

    <!-- 핑크색 배경 영역 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#FFCDD2">

        <!-- 상명대학교 로고 이미지 뷰 -->

        <TextView
            android:id="@+id/blur_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sumungi_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="143dp"
            android:layout_marginEnd="294dp"
            android:text="지문 블러링 사용하기"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_error"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="147dp"
            android:text="Before"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/before2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentBottom="true"
            android:layout_marginStart="268dp"
            android:layout_marginBottom="144dp"
            android:text="After"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/smu_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/smu_logo"
            android:scaleType="fitCenter" />

        <!-- 손모양 아이콘을 담을 레이아웃 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <!-- 손 모양 아이콘 1 -->

            <!-- 손 모양 아이콘 2 -->
        </LinearLayout>

        <!-- 수뭉이 이미지 뷰 -->
        <ImageView
            android:id="@+id/sumungi_image"
            android:layout_width="194dp"
            android:layout_height="214dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="105dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sumungi" />

        <!-- 문구 추가 -->
        <TextView
            android:id="@+id/blur_text2"
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sumungi_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="9dp"
            android:text="지문 블러링으로 내 정보를 보호하기!"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_error"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/hand_icon_1"
            android:layout_width="79dp"
            android:layout_height="46dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="253dp"
            android:layout_marginBottom="95dp"
            android:scaleType="fitCenter"
            android:src="@drawable/hand_icon" />

        <ImageView
            android:id="@+id/hand_icon_2"
            android:layout_width="79dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="93dp"
            android:scaleType="fitCenter"
            android:src="@drawable/hand_icon_2" />
    </RelativeLayout>

    <!-- View Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"/>

    <!-- 카메라 버튼, 하단에 위치합니다. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/rounded_button_blue"
            android:text="홍채 블러링 ON"
            android:textColor="#FBF7F7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="지문 블러링 OFF"
            android:layout_marginRight="60dp"
            android:textColor="#FBF7F7"
            android:background="@drawable/rounded_button"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"/>
    </RelativeLayout>

    <!-- 카메라 버튼 -->
    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/rounded_button_grey"
        android:text="카메라"
        android:textColor="#FBF7F7"
        android:textSize="24sp" />

    <!-- 앨범 버튼 -->
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="앨범"
        android:textColor="#FBF7F7"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:background="@drawable/rounded_button_grey"/>
</LinearLayout>